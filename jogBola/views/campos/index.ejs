<% layout('layouts/boilerplate') %>
    <!-- chamar layout passa esse arquivo para o boilerplate como body -->
    <h1>Todos os Campos</h1>

    <p>
        <a href="/campos/new" class="">Adicione um Campo</a>
    </p>

    <% for(let campo of campos){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= campo.imagem %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campo.titulo %></h5>
                        <p class="card-text"><%= campo.descricao %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campo.local %></small>
                        </p>
                        <a class="btn btn-success" href="/campos/<%= campo._id %>">Saiba mais</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

